<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="/assets/img/logo4-pourble done.png" />
    <title>CryptoSim Home Page</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('../layout/header') %>

    <div class="mainimg">


        <h1>Buy & sell Crypto without worries</h1>

    </div>

    
        <main>       
            

            <div class="mainNews">
                <h2>Last News</h2>
                <ul class="firstNews">
                    <% for(let i=0;i < 2;i ++){ %>
                        <li><a href="<%= news[i].url %>">
                                <%= news[i].title %>
                            </a></li>
                        <% } %>
                </ul>
                <ul class="restNews">
                    <% for(let i=2;i < news.length;i ++){ %>
                        <li class="news"><a href="<%= news[i].url %>">
                                <%= news[i].title %>
                            </a></li>
                        <% } %>
                </ul>
                <button id="newButton">More News</button>
                <button id="LessButton">Less News</button>

            </div>
            <!-- <div class="mainvideo">
                <video controls>
                    <source src="/assets/img/crypto.mp4" type="video/mp4">
                </video>

            </div> -->
            <div class="mainCoins">
                <table class="coins_table">
                    <tr class="table_header">
                        <th>Rank</th>
                        <th>coin </th>
                        <th>symbol</th>
                        <th>Logo </th>
                        <th>price </th>
                        <th>24h change </th>
                        <th>last 7 days chart</th>
                        <th>trade</th>
                    </tr>

                    <% trend.forEach(item=>{%>
                        <tr class="table_data">
                            <td>
                                <%= item.rank%>
                            </td>
                            <td>
                                <%= item.id%>
                            </td>
                            <td>
                                <%= item.symbol%>
                            </td>
                            <td>
                                <img src="<%= item.img%>" alt="" srcset="">
                            </td>
                            <td>
                                <%= item.price%>
                            </td>
                            <td>
                                <%= item.change%>
                            </td>
                            <td>
                                <img src="<%= item.chart%>" alt="" srcset="">
                            </td>
                            <td>

                                <a href="/trade/<%=item.id%>">trade</a>
                            </td>
                        </tr>
                        <%});%>
                </table>
            </div>
        </main>
        <%- include('../layout/footer') %>


            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="/js/app.js"></script>
            <script src="/js/home.js"></script>
</body>

</html>