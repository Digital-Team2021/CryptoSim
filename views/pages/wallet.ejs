<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="/assets/img/logo4-pourble done.png" />
    <title>CryptoSim Home Page</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/wallet.css">
</head>
<body>
    <%- include('../layout/header') %>
    <main>
        <div class="balance">
            <h1>Your Balance is : <%=total.balance%> $ </h1>
        </div>
        
            <h2 class="ocoins">Your Coins :</h2>
            <div>
                
                <div class="otable"></div>

                    <table id="customers">
                        <tr>
                          <th>Logo</th> 
                          <th>Coin</th>
                          <th>Amount</th>
                          <th>Value</th>
                          <th>Trade</th>
                        </tr>
                        <% walletinfo.forEach(element => { %>
                        <tr>
                          <td><img src="<%= element.img %>" alt="walletCoins" width="20" height="20"></td>
                          <td><%= element.coinName %></td>
                          <td><%= element.amount %></td>
                          <td><%= element.value %> $</td>
                          <td><a href="/trade/<%= element.coinName %>">trade</a></td>
                        </tr>
                        <% }) %>   
                      </table>

                </div>
  

     
    </main>
    <%- include('../layout/footer') %>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="/js/app.js"></script>
            <script src="/js/wallet.js"></script>
</body>
</html>