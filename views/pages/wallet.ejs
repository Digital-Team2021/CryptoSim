<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="/assets/img/logo4-pourble done.png" />
    <title>CryptoSim Home Page</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../layout/header') %>
    <main>
        <div class="balance">
            <h1>Your Balance is : <%=total.balance%> $ </h1>
        </div>
        <div class="coinsWallet">
            <h2>Your Coins</h2>
            <div>
                <h3>Coin </h3>
                <h3>Amount</h3>
                <h3>Value</h3>
                <h3>Trade</h3>
                
                    <% walletinfo.forEach(element => { %>
                    <ul> 
                        <li><img src="<%= element.img %>" alt="walletCoins" width="20" height="20"></li>
                        <li><%= element.coinName %></li>
                        <li><%= element.amount %></li>  
                        <li><%= element.value %> $</li>
                        <li><a href="/trade/<%= element.coinName %>" id="<%= element.coinName %>">Trade</a></li>  

                    </ul>
                
                   <% }) %>   
                    
                

            </div>

        </div>

     
    </main>
    <%- include('../layout/footer') %>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="/js/app.js"></script>
            <script src="/js/wallet.js"></script>
</body>
</html>