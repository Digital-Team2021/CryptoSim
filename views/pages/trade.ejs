<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>trade</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>

  <%- include('../layout/header') %>
    <main>

      <div class="chart">
        <script src="https://widgets.coingecko.com/coingecko-coin-compare-chart-widget.js"></script>
        <coingecko-coin-compare-chart-widget coin-ids="bitcoin" currency="usd" locale="en">
        </coingecko-coin-compare-chart-widget>
      </div>

      <div class="excange">
        <script src="https://widgets.coingecko.com/coingecko-coin-converter-widget.js"></script>
        <coingecko-coin-converter-widget coin-id="bitcoin" currency="usd" background-color="#FFFFFF"
          font-color="#4C4C4C" locale="en"></coingecko-coin-converter-widget>
      </div>
      <div class="btnContainer">
        <button class="butBtn">Buy</button>
        <button class="sellBtn">Sell</button>
      </div>
      <div>
        <section class="buy">
          <form action="">
            <label for="amount"></label>
            <input type="number" name="amount" id="amount">
            <button>Buy</button>
          </form>
        </section>

        <section class="sell">
          <form action="">
            <label for="amount"></label>
            <input type="number" name="amount" id="amount">
            <button>Sell</button>
          </form>
        </section>
      </div>

    </main>
    <%- include('../layout/footer') %>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/app.js"></script>

</body>

</html>