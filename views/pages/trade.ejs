<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>trade</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <%- include('../layout/header') %>

    <main>
      <div class="chart">
        <script src="https://widgets.coingecko.com/coingecko-coin-compare-chart-widget.js"></script>
        <coingecko-coin-compare-chart-widget
          coin-ids="<%=coin.id%>"
          currency="usd"
          locale="en"
        >
        </coingecko-coin-compare-chart-widget>
      </div>

      <div class="coinData">
        <div class="coinImgLarge">
          <img src="<%=coin.img%>" alt="<%=coin.id%>" />
        </div>
        <table>
          <tr>
            <th>Rank</th>
            <th>Coin Name</th>
            <th>Coin Symbol</th>
            <th>Price</th>
            <th>price change percentage 24h</th>
            <th>High 24h</th>
            <th>Low 24h</th>
            <th>Market cap</th>
          </tr>
          <tr>
            <td><%=coin.rank%></td>
            <td><%=coin.id%></td>
            <td><%=coin.symbol%></td>
            <td><%=coin.price%></td>
            <td><%=coin.change%></td>
            <td><%=coin.high_24h%></td>
            <td><%=coin.low_24h%></td>
            <td><%=coin.market_cap%></td>
          </tr>
        </table>
      </div>

      <div class="excange">
        <script src="https://widgets.coingecko.com/coingecko-coin-converter-widget.js"></script>
        <coingecko-coin-converter-widget
          coin-id="<%=coin.id%>"
          currency="usd"
          background-color="#FFFFFF"
          font-color="#4C4C4C"
          locale="en"
        ></coingecko-coin-converter-widget>
      </div>

      <div class="btnContainer">
        <button class="buyBtn">Buy</button>
        <button class="sellBtn">Sell</button>
      </div>

      <div>
        <section class="buy">
          <form action="/buy?_method=put" method="POST">
            <label for="amount"
              >How much you want to buy <%=coin.id%> in USD</label
            >
            <input
              type="number"
              name="amount"
              id="amount"
              step="any"
              placeholder="In USD"
            />
            <input type="hidden" name="name" class="userNameBuy" />
            <input type="hidden" name="price" value="<%=coin.price%>" />
            <input type="hidden" name="coinName" value="<%=coin.id%>" />
            <button>Buy</button>
          </form>
        </section>

        <section class="sell">
          <form action="/sell?_method=put" method="POST">
            <label for="amount">How many <%=coin.id%> you want to sell</label>
            <input
              type="number"
              name="amount"
              id="amount"
              step="any"
              placeholder="How many <%=coin.id%> you want to sell"
            />
            <input type="hidden" name="name" class="userNameBuy" />
            <input type="hidden" name="price" value="<%=coin.price%>" />
            <input type="hidden" name="coinName" value="<%=coin.id%>" />
            <button>Sell</button>
          </form>
        </section>
      </div>
    </main>

    <%- include('../layout/footer') %>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/trade.js"></script>
    <script src="/js/app.js"></script>
  </body>
</html>
