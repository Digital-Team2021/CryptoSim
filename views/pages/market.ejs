<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Market</title>
    <link rel="stylesheet" href="./css/style.css">
</head>

<body>

    <%- include('../layout/header') %>
        <main>
            <div class="searchandsort">
                <button>Search</button>
                <button>Sort</button>
            </div>
            <div class="marketTable">
                <table>
                    <tr>
                        <th>Rank</th>
                        <th>coin </th>
                        <th>symbol</th>
                        <th>img </th>
                        <th>price </th>
                        <th>change </th>
                        <th>last 7 days</th>
                        <th>trade</th>
                    </tr>

                    <% coins.forEach(item=>{%>
                        <tr>
                            <td>
                                <%= item.rank%>
                            </td>
                            <td>
                                <%= item.id%>
                            </td>
                            <td>
                                <%= item.symbol%>
                            </td>
                            <td>
                                <img src="<%= item.img%>" alt="" srcset="">
                            </td>
                            <td>
                                <%= item.price%>
                            </td>
                            <td>
                                <%= item.change%>
                            </td>
                            <td>
                                <img src="<%= item.chart%>" alt="" srcset="">

                            </td>
                            <td>
        
                                <a href="/trade/<%=item.id%>">trade</a>
                            </td>

                        </tr>
                        <%});%>

                </table>
            </div>
        </main>
        <%- include('../layout/footer') %>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="/js/app.js"></script>
</body>

</html>